  transform-origin: 50% 50%;

  @if $direction == "up" {
    border-top: $stroke solid currentColor;
    border-right: $stroke solid currentColor;
  }

  @if $direction == "right" {
    border-right: $stroke solid currentColor;
    border-bottom: $stroke solid currentColor;
  }

  @if $direction == "down" {
    border-bottom: $stroke solid currentColor;
