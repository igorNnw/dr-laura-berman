[
  {
    "name": "theme_info",
    "theme_name": "Handy",
    "theme_author": "Pixel Union",
    "theme_version": "2.3.10",
    "theme_documentation_url": "http:\/\/support.pixelunion.net\/category\/354-handy",
    "theme_support_email": "support@pixelunion.net"
  },
  {
    "name": "Quickshop",
    "settings": [
      {
        "type": "checkbox",
        "id": "quickshop_enable_cart_redirection",
        "label": "Enable cart redirection",
        "info": "Automatically sends users to the Cart page after adding a product.",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "quickshop_show_payment_button",
        "label": "Show dynamic checkout button",
        "info": "Each customer will see their preferred payment method from those available on your store, such as PayPal or Apple Pay. [Learn more](https:\/\/help.shopify.com\/manual\/using-themes\/change-the-layout\/dynamic-checkout)",
        "default": true
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "32 x 32px .png required"
      }
    ]
  },
  {
    "name": "Color",
    "settings": [
      {
        "type": "color",
        "id": "color_background",
        "label": "Background"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent",
        "info": "Button backgrounds, calls-to-action, and some icons"
      },
      {
        "type": "checkbox",
        "id": "use_highlighted_menu",
        "label": "Use highlighted bottom bar",
        "info": "Applies accent color to background on bottom bar on collection, product, and cart pages on larger screens",
        "default": false
      },
      {
        "type": "color",
        "id": "color_title_text",
        "label": "Headings & menu links"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Body text"
      },
      {
        "type": "color",
        "id": "color_button_text",
        "label": "Button text"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "label": "Title font",
        "id": "font_title",
        "default": "helvetica_n4"
      },
      {
        "type": "font_picker",
        "label": "Body font",
        "id": "font_body",
        "default": "helvetica_n4"
      },
      {
        "type": "font_picker",
        "label": "Label font",
        "id": "font_label",
        "default": "helvetica_n4"
      }
    ]
  },
  {
    "name": "Currency",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_currency_converter",
        "label": "Enable currency conversion",
        "default": true,
        "info": "Even though prices are displayed in different currencies, orders will still be processed in your store's currency."
      },
      {
        "type": "select",
        "id": "currency_display_format",
        "label": "Format",
        "options": [
          {
            "value": "money_format",
            "label": "Without currency ($10.00)"
          },
          {
            "value": "money_with_currency_format",
            "label": "With currency ($10.00 CAD)"
          }
        ],
        "default": "money_with_currency_format"
      },
      {
        "type": "text",
        "id": "currency_converter_currencies",
        "label": "Supported currencies",
        "default": "INR GBP CAD USD AUD EUR JPY",
        "info": "Use the country's ISO [currency code](http:\/\/www.xe.com\/iso4217.php). Separate your currency codes with a space."
      },
      {
        "type": "text",
        "id": "currency_converter_default",
        "label": "Default currency",
        "default": "USD"
      }
    ]
  },
